{% form_theme page.content.formView 'helpers/fields.html.twig' %}

{{- form_start(page.content.formView, {
    'attr': {
        'id': 'contact-hubspot-form',
        'novalidate': 'novalidate',
        'class': class|default('js-validate form')
    },
    'action': action|default(null),
}) -}}
    {{- form_row(page.content.formView.name, {'attr': {
        'data-rule-required': 'true',
        'data-rule-maxlength': 255,
        'data-msg-required': 'not_blank'|trans({}, 'validators'),
        'data-msg-maxlength': 'max_length'|trans({}, 'validators'),
    }}) -}}
    {{- form_row(page.content.formView.email, {'attr': {
        'data-rule-required': 'true',
        'data-rule-email': 'true',
        'data-rule-maxlength': 255,
        'data-msg-required': 'not_blank'|trans({}, 'validators'),
        'data-msg-email': 'email'|trans({}, 'validators'),
        'data-msg-maxlength': 'max_length'|trans({}, 'validators'),
    }}) -}}
    {{- form_row(page.content.formView.phone, {'attr': {
        'data-rule-required': 'true',
        'data-rule-maxlength': 255,
        'data-msg-required': 'not_blank'|trans({}, 'validators'),
        'data-msg-maxlength': 'max_length'|trans({}, 'validators'),
    }}) -}}
    {{- form_row(page.content.formView.comment, {'attr': {
        'data-rule-required': 'true',
        'data-rule-maxlength': 255,
        'data-msg-required': 'not_blank'|trans({}, 'validators'),
        'data-msg-maxlength': 'max_length'|trans({}, 'validators'),
    }}) -}}
    {{- form_row(page.content.formView.privacyPolicy, {
        'attr': {
            'data-rule-required': 'true',
            'data-msg-required': 'privacy_policy'|trans({}, 'validators'),
        },
        'label': 'form.privacy_policy',
        'label_params': {
            '%url%': 'privacy_url'|translate
        },
    }) -}}
    {{- form_row(page.content.formView.send) -}}
{{- form_end(page.content.formView) -}}
